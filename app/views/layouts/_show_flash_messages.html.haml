- flash.each do |key, value|
  - case key
    - when :alert
      - type = "warning"
    - when :error
      - type = "error"
    - when :notice
      - type = "success"
    - else
      - type = "info"

  %div{:class => "alert  alert-#{type}"}
    %h4.alert-heading
      = key.capitalize
      \:
    = value
